.content{
  align-items: center;
  display: flex;
  flex-direction: column;
}
.userinfo-avatar{
  border-radius: 50%;
  width: 150rpx;
  height: 150rpx;
  margin: 0 auto;
  line-height: 200rpx;
  margin-top: 25rpx;
}

.topArea{
  height: 200rpx;
  line-height: 200rpx;
  width: 100%;
  background-color: rgb(236, 236, 236);
  align-items: center;
  display: flex;
  flex-direction: column;
}
.singalMessage{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  margin-left: 40rpx;
}
.horizon{
     width: 100%;
   height: 1px;
   background-color: #b4b4b4;
   vertical-align: middle;
   position: relative;
}
.message{
  width: 100%;
  color: rgb(87, 87, 87);
}