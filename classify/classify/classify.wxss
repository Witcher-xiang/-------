/* classify/classify/classify.wxss */
.topArea{
  width: 1500rpx;
  height: 300rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
    vertical-align: middle;
  background-color: rgb(223, 189, 127);

}
.a{
  width: 100%;
  height: 300rpx;  /*a标签*/
}
.topIcon{
  width: 180rpx;
  height: 180rpx;
  border-radius: 10px;
  margin-left: 50rpx;
  margin-top: 50rpx;
  margin-bottom: 30rpx;
}
.restruantName{
  font-size: 46rpx;
  margin-left: 20rpx;
}
.shopHours{
  font-size: 26rpx;
  margin-left: 20rpx;
  margin-top: 30rpx;
  color: rgb(228, 228, 228);
}
.textArea{
  display: flex;
  flex-direction: column;
}

.leftNavigationBar{
  width: 240rpx;
  height: 100%;
  display:flex;
  flex-direction: column;
    background-color: rgb(223, 189, 127);
  position: fixed; /*利用position来填满整个屏幕*/
}

.navigatBlock{
  width: 240rpx;
  text-align: center;
  padding-bottom: 30rpx;
  padding-top: 30rpx;
  color: rgb(245, 245, 245);
}
.selected{
  width: 240rpx;
  text-align: center;
  padding-bottom: 30rpx;
  padding-top: 30rpx;
  color: rgb(0, 0, 0);
  background-color: white;
}
.order{
  display: flex;
  flex-direction: row;
  position: relative;
  left: 240rpx;
}/*一个整体菜单的排版*/
.singleOrder{
  width: 100%;
  height: 200rpx;
  flex-direction: row;
  display: flex;
  align-items: center;
}
.textArea{
  display: flex;
  flex-direction: column;
}
.foodName{
  font-size: 36rpx;
}
.price{
  font-size: 34rpx;
  color: red;
  
}
.orderPicture{
  width: 200rpx;
  height: 150rpx;
  margin:0 20rpx 0 20rpx;
}

.plus{
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.minus{
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.number{
  display: flex;
  flex-direction: row;
  align-items: center;
  
}
.cartArea{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100rpx;
  background-color: white;
  position: fixed;
  bottom: 0;
  z-index: 21;
}
.cartPress{
  width: 90rpx;
  height: 90rpx;
  margin: 0 auto;
  position: relative;
  left: 20rpx;
  top: 20rpx;

}
.settlement{
  width: 200rpx;
  height: 100rpx;
  background-color: orange;
  color:white;
  line-height: 100rpx;
  text-align: center;
  font-size: 36rpx;
  margin-left: 320rpx;
}

.totalMoney{
  width: 10%;
  color: red;
  margin-left: 180rpx;
  font-size: 46rpx;
 
}
.cartBackground{
  width: 130rpx;
  height: 130rpx;
  background: orange;
  border-radius: 50%;
  position: fixed;
  z-index: 99;
  margin-left: 50rpx;
  line-height: 130rpx;
  bottom:30rpx;
}
.cartBackgroundDisabled{
  width: 130rpx;
  height: 130rpx;
  background: gray;
  border-radius: 50%;
  position: fixed;
  z-index: 99;
  margin-left: 50rpx;
  line-height: 130rpx;
  bottom: 30rpx;
}
.settlementDisabled{
  width: 200rpx;
  height: 100rpx;
  background-color: grey;
  color:white;
  line-height: 100rpx;
  text-align: center;
  font-size: 36rpx;
  margin-left: 320rpx;
}
.position{
  position: fixed;
  z-index: 1;    /*这里使用了indx*/
}
.b{
  z-index: 999999; 
}