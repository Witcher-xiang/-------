}

/*地址样式*/

.contact-box{
    display: flex;
    width: 90%;
  height: auto;
  flex-direction: column;
  padding-left: 50rpx;
  margin-top: 30rpx;
  margin-right: 20rpx;
}
.contact-box>view:first-child{
    flex: 1;
}
.contact .val{
    color:#333;
}
.contact .mobile-box{
    flex-basis: 200rpx;
    margin-top: 10rpx;
}
.contact-box .detail{
    color:#999999;
}
.contact-icon{
    flex-basis: 110rpx;
    display: flex;
    align-items: center;
    justify-content: flex-end;
}
.contact-icon image{
    transform: rotate(270deg);
    height: 48rpx;
    width: 48rpx;
}
.add-new-address{
  
  text-align: center;
  line-height: 200rpx;
  color: gainsboro;
}

.tip{
  text-align: center;
  margin: 0 auto;
  color: grey;
 font-size: 42rpx;
}