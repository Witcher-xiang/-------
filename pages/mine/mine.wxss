/* pages/mine/mine.wxss */
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  margin-top:-150rpx;
}

.userinfo-nickname {
  color: #aaa;
}
 .horizon{
   width: 100%;
   height: 1px;
   background-color: #b4b4b4;
   vertical-align: middle;
   position: relative;
   
   
  
 }
.topArea{
  background-color: rgb(245, 245, 245);
}
.list{
  font-size: 40rpx;
  display: flex;
  flex-direction: column;
}
.list image{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
  margin-left: 100rpx;
  margin-right: 20rpx;
}
.line{
  display: flex;
  flex-direction: row;
  height:  150rpx;
  align-items: center;
  position: relative;
  right: 40rpx;
}  /*这是比如“使用须知的单行内容”*/
.textLine{
  width: 400rpx;
}
